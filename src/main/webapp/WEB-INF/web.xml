<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>DBCLPM</display-name>
  <welcome-file-list>
    <welcome-file>/login</welcome-file>
  </welcome-file-list>
  
  <session-config>
    <session-timeout>1440</session-timeout> <!-- Thời gian hết hạn của phiên làm việc (phút) -->
    <cookie-config>
      <name>JSESSIONID</name> <!-- Tên của cookie JSESSIONID -->
      <max-age>86400</max-age> <!-- Giá trị expires của cookie JSESSIONID (giây) -->
      <!-- Các thuộc tính khác cho cookie -->
    </cookie-config>
  </session-config>
</web-app>